<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/custom_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/toolbar_logo"
                style="@android:style/Widget.Material.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="5dp"
                android:contentDescription="logo"
                android:padding="2dp"
                android:src="@mipmap/logo_round" />

            <TextView
                android:id="@+id/toolbar_title"
                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="80dp"
                android:text="Marathi Quotes"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <Button
                android:id="@+id/Share_Btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_margin="10dp"
                android:background="@drawable/ic_share_white" />

        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/banner_Ad"
        android:layout_below="@id/custom_toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/friendship"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:background="@drawable/custom_user"
                android:text="मैत्रीचे कोट्स"
                android:textColor="@color/white"
                android:textSize="32sp" />

            <Button
                android:id="@+id/tilak"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:background="@drawable/custom_user2"
                android:text="लोकमान्य टिळक कोट्स"
                android:textColor="@color/black"
                android:textSize="32sp" />

            <Button
                android:id="@+id/ganpati"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:background="@drawable/custom_user"
                android:text="गणेश चतुर्थी कोट्स"
                android:textColor="@color/white"
                android:textSize="32sp" />

            <Button
                android:id="@+id/motivation"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:background="@drawable/custom_user2"
                android:text="प्रेरणादायक कोट्स"
                android:textColor="@color/black"
                android:textSize="32sp" />

            <Button
                android:id="@+id/rakshabandhan"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:background="@drawable/custom_user"
                android:text="रक्षाबंधन कोट्स"
                android:textColor="@color/white"
                android:textSize="32sp" />

            <Button
                android:id="@+id/life"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:background="@drawable/custom_user2"
                android:text="प्राण कोट्स"
                android:textColor="@color/black"
                android:textSize="32sp" />

            <Button
                android:id="@+id/savarkar"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:background="@drawable/custom_user"
                android:text="वीर सावरकर कोट्स"
                android:textColor="@color/white"
                android:textSize="32sp" />


        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/banner_Ad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical" />

</RelativeLayout>